  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@google/generative-ai": "^0.24.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "openai": "^6.6.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "stripe": "^17.5.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
