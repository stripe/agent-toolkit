{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "index.ts",
        "token-meter.ts",
        "meter-event-logging.ts",
        "meter-event-types.ts",
        "types.ts",
        "utils/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "tests",
        "examples",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}