{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "openai": [
        "node_modules/openai"
      ],
      "@anthropic-ai/sdk": [
        "node_modules/@anthropic-ai/sdk"
      ],
      "@google/generative-ai": [
        "node_modules/@google/generative-ai"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}